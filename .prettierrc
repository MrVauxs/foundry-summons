{
	"arrowParens": "always",
	"bracketSpacing": true,
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	],
	"pluginSearchDirs": ["."],
	"plugins": ["svelte", "prettier-plugin-svelte"],
	"printWidth": 120,
	"semi": true,
	"singleQuote": true,
	"svelteAllowShorthand": true,
	"svelteIndentScriptAndStyle": true,
	"svelteSortOrder": "options-scripts-markup-styles",
	"tabWidth": 4,
	"trailingComma": "es5",
	"useTabs": true
}
